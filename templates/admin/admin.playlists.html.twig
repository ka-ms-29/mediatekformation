{% extends "baseadmin.html.twig" %}
{% block body %}
    <h1>Gestion des playlists</h1>
    <table class="table table-striped" description="Liste des playlist"> 
        <thead>
            <tr>
                <th class="text-left align-top" scope="col">
                    playlist<br />
                    <a href="{{ path('admin.playlists.sort', {champ:'name', ordre:'ASC'}) }}" class="btn btn-info btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('admin.playlists.sort', {champ:'name', ordre:'DESC'}) }}" class="btn btn-info btn-sm active" role="button" aria-pressed="true">></a>
                    <form class="form-inline mt-1" method="POST" action="{{ path('admin.playlists.findallcontain', {champ:'name'}) }}">
                        <div class="form-group mr-1 mb-2">
                            <input type="text" class="sm" name="recherche" 
                                   value="{% if valeur|default and not table|default %}{{ valeur }}{% endif %}">
                            <input type="hidden" name="_token" value="{{ csrf_token('filtre_name') }}">
                            <button type="submit" class="btn btn-info mb-2 btn-sm">Filtrer</button>
                        </div>
                    </form>                    
                </th>
                
                <th class="text-left align-top" scope="col">
                    cat√©gories
                    <form class="form-inline mt-1" method="POST" action="{{ path('admin.playlists.findallcontain', {champ:'id', table:'categories'}) }}">
                        <select class="form-select form-select-sm" name="recherche" id="recherche" onchange="this.form.submit()">
                            <option value=""></option>
                            {% for categorie in categories %}
                                <option 
                                    {% if valeur|default and valeur==categorie.id %} 
                                        selected
                                    {% endif %} 
                                    value="{{ categorie.id }}">{{ categorie.name }}
                                </option>
                            {% endfor %}
                        </select>                    
                    </form>            
                </th>
                <!-- mission1 tache2_ajout un column -->
                <th class="text-center align-top" scope="col">
                    NB de formation<br />
                   <a href="{{ path('admin.playlists.sort', { champ: 'formation', ordre: 'ASC' }) }}" class="btn btn-info btn-sm active" role="button" aria-pressed="true"><</a>
                   <a href="{{ path('admin.playlists.sort', { champ: 'formation', ordre: 'DESC' }) }}" class="btn btn-info btn-sm active" role="button" aria-pressed="true">></a> 
                </th>
                <th class="text-center align-top" scope="col">
                    &nbsp;
                </th>
                <th class="text-end align-top" scope="col">
                   <a href="{{ path('admin.playlist.ajout') }}" class="btn btn-primary">Ajouter</a>     
                </th>
            </tr>
        </thead>
        <tbody>
            <!-- boucle sur les playlists -->
            {% if playlists|length > 0 %}
                {% for k in 0..playlists|length-1 %}
                    <tr class="align-middle">
                        <td>
                            <h5 class="text-info">
                                {{ playlists[k].name }}
                            </h5>
                        </td>                 
                        <td class="text-left">
                            {% set categories = playlists[k].categoriesplaylist %}
                            {% if categories|length > 0  %}
                                {% for c in 0..categories|length-1 %}
                                    &nbsp;{{ categories[c] }}                                  
                                {% endfor %}
                            {% endif %}
                        </td>
                        <!-- mission1 tache2 en cour de modification afin d'ffichage le nombre de formation-->
                        <td class="text-center">
                            {{ playlists[k].formations|length}}
                        </td>
                        <td class="text-center">
                        <td class="text-end">
                        <a href="{{ path('admin.playlist.edit', {id:playlists[k].id}) }}" class="btn btn-secondary mb-2"> Modifier </a> 
                        <a href="{{ path('admin.playlist.suppr', {id:playlists[k].id}) }}" class="btn btn-danger mb-2" onclick="return confirm('Etes-vous sur de vouloir supprimer {{playlists[k].name}} ?')">Supprimer</a>
                                              
                        </td> 					
                    </tr>
                {% endfor %}	
            {% endif %}
        </tbody>
        
    </table>
{% endblock %}



